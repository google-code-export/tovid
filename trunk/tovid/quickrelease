#! /bin/bash
# Do a "quick release" of the SVN code

TARBALL="tovid-svn-`date +%Y-%m-%d`.tar.gz"
TARGET_DIR="/home/groups/t/to/tovid/htdocs/download"

if test $# -lt 1; then
    echo "Usage: quickrelease USERNAME"
    exit
else
    USERNAME=$1
fi
./bootstrap
./configure
make dist
mv tovid-svn.tar.gz $TARBALL
scp $TARBALL $USERNAME@shell.sourceforge.net:$TARGET_DIR
